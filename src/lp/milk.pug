                  .schedule(
                    id=`artist${j}-wrap`
                    style=`border-color:${area.primaryColor}`
                  )
                    - for (n = 0; n < 2; n++)
                      if n == 0
                        input(
                          id=`artist${j}day${n}`
                          type="radio"
                          name=`artist${j}day`
                          checked
                        )
                      else
                        input(
                          id=`artist${j}day${n}`
                          type="radio"
                          name=`artist${j}day`
                        )
                    .head
                      - for (n = 0; n < 2; n++)
                          label(
                            class=`artist${j}day${n}-label`
                            for=`artist${j}day${n}`
                            name=`artist${j}day`
                          ) DAY#{n+1} #{data[n]}
                    .body
                      - for (n = 0; n < 2; n++)
                        .day(
                          id=`artist${j}day${n}-wrap`
                        )
                          each item, y in area.stage[n]
                            .time
                              span.label 第#{y+1}部
                              span #{item.time}
